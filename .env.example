# Copy to .env and fill in values

# --- Database ---
DATABASE_URL="postgresql://user:password@localhost:5436/habit_tracker_db"

# --- Server ---
PORT=3000
NODE_ENV=development
# Comma-separated origins for CORS (e.g. http://localhost:8080,https://app.example.com)
CORS_ALLOWED_ORIGINS=http://localhost:3000

# --- Better Auth (required) ---
# Generate: openssl rand -base64 32
BETTER_AUTH_SECRET=
# Base URL of this API (production: https://api.example.com)
BETTER_AUTH_URL=http://localhost:3000

# --- SendGrid (magic link + email verification) ---
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@example.com
# Optional: eu for EU data residency
# SENDGRID_DATA_RESIDENCY=eu

# --- Google OAuth ---
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
